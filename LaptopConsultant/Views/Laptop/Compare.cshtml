@model LaptopConsultant.ViewModels.CompareViewModel
@{
    ViewData["Title"] = "So sánh laptop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">So sánh laptop</h2>
    @if (Model.Laptops.Any())
    {
        <div id="compareTable" class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200">
                <thead>
                    <tr>
                        <th class="px-4 py-2"></th>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <th class="px-4 py-2 text-center">@laptop.Name</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="px-4 py-2 font-medium">Hình ảnh</td>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <td class="px-4 py-2"><img src="@laptop.ImageUrl" alt="@laptop.Name" class="w-24 h-24 object-cover mx-auto"></td>
                        }
                    </tr>
                    <tr>
                        <td class="px-4 py-2 font-medium">Thương hiệu</td>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <td class="px-4 py-2 text-center">@laptop.Brand</td>
                        }
                    </tr>
                    <tr>
                        <td class="px-4 py-2 font-medium">CPU</td>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <td class="px-4 py-2 text-center">@laptop.CPU</td>
                        }
                    </tr>
                    <tr>
                        <td class="px-4 py-2 font-medium">RAM</td>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <td class="px-4 py-2 text-center">@laptop.RAM</td>
                        }
                    </tr>
                    <tr>
                        <td class="px-4 py-2 font-medium">Storage</td>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <td class="px-4 py-2 text-center">@laptop.Storage</td>
                        }
                    </tr>
                    <tr>
                        <td class="px-4 py-2 font-medium">Screen</td>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <td class="px-4 py-2 text-center">@laptop.Screen</td>
                        }
                    </tr>
                    <tr>
                        <td class="px-4 py-2 font-medium">GPU</td>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <td class="px-4 py-2 text-center">@laptop.GPU</td>
                        }
                    </tr>
                    <tr>
                        <td class="px-4 py-2 font-medium">Giá</td>
                        @foreach (var laptop in Model.Laptops)
                        {
                            <td class="px-4 py-2 text-center">@laptop.Price.ToString("N0") ₫</td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center text-gray-600">Chưa có laptop nào được chọn để so sánh.</p>
    }
</section>