@{
    ViewData["Title"] = "So sánh Laptop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-2xl font-bold mb-4">So sánh Laptop</h2>

@if (Model?.Laptops != null && Model.Laptops.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var laptop in Model.Laptops)
        {
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden shadow-md p-4">
                <img src="@laptop.ImageUrl" alt="@laptop.Name" class="w-full h-48 object-cover object-top mb-4">
                <h3 class="text-xl font-semibold">@laptop.Name</h3>
                <p class="text-gray-600">Giá: @laptop.Price.ToString("N0") VNĐ</p>
                <p class="text-gray-600">CPU: @laptop.CPU</p>
                <p class="text-gray-600">RAM: @laptop.RAM GB</p>
                <p class="text-gray-600">SSD: @laptop.SSD GB</p>
            </div>
        }
    </div>
}
else
{
    <p class="text-red-500">Không có laptop nào được chọn để so sánh.</p>
}

<a href="@Url.Action("Index", "Laptop")" class="mt-4 inline-block text-primary hover:underline">Quay lại</a>