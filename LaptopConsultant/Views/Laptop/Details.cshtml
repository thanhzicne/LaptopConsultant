@model LaptopConsultant.Models.Laptop
@{
    ViewData["Title"] = "Chi tiết Laptop";
}

<section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 animate-fade-in">@Model.Name</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="relative overflow-hidden rounded-lg shadow-md group">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-auto object-cover transform group-hover:scale-103 transition-transform duration-300">
            </div>
            <div class="flex flex-col justify-between">
                <div>
                    <p class="text-base text-gray-700 mb-2"><strong>Thương hiệu:</strong> @Model.Brand</p>
                    <p class="text-base text-gray-700 mb-2"><strong>CPU:</strong> @Model.CPU</p>
                    <p class="text-base text-gray-700 mb-2"><strong>RAM:</strong> @Model.RAM</p>
                    <p class="text-base text-gray-700 mb-2"><strong>Storage:</strong> @Model.Storage</p>
                    <p class="text-base text-gray-700 mb-2"><strong>Screen:</strong> @Model.Screen</p>
                    <p class="text-base text-gray-700 mb-2"><strong>GPU:</strong> @Model.GPU</p>
                    <p class="text-base text-gray-700 mb-2"><strong>Weight:</strong> @Model.Weight</p>
                    <p class="text-base text-gray-700 mb-4"><strong>OS:</strong> @Model.OS</p>
                    <p class="text-base text-gray-700 mb-4"><strong>Price:</strong> @Model.Price.ToString("N0") ₫</p>
                </div>
                <a href="@Url.Action("Index", "Home")" class="btn-primary bg-primary text-white px-6 py-2 rounded-md hover:bg-blue-600 transition-colors text-sm">Quay về trang chủ</a>
            </div>
        </div>
    </div>
</section>