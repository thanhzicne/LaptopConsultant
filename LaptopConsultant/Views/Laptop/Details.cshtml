@model LaptopConsultant.Models.Laptop
@{
    ViewData["Title"] = "Chi tiết Laptop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-16">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">@Model.Name</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
                <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-auto object-cover rounded-lg shadow-lg">
            </div>
            <div>
                <p class="text-lg text-gray-700 mb-4"><strong>Thương hiệu:</strong> @Model.Brand</p>
                <p class="text-lg text-gray-700 mb-4"><strong>CPU:</strong> @Model.CPU</p>
                <p class="text-lg text-gray-700 mb-4"><strong>RAM:</strong> @Model.RAM</p>
                <p class="text-lg text-gray-700 mb-4"><strong>Storage:</strong> @Model.Storage</p>
                <p class="text-lg text-gray-700 mb-4"><strong>Screen:</strong> @Model.Screen</p>
                <p class="text-lg text-gray-700 mb-4"><strong>GPU:</strong> @Model.GPU</p>
                <p class="text-lg text-gray-700 mb-4"><strong>Weight:</strong> @Model.Weight</p>
                <p class="text-lg text-gray-700 mb-4"><strong>OS:</strong> @Model.OS</p>
                <p class="text-lg text-gray-700 mb-4"><strong>Price:</strong> @Model.Price.ToString("N0") ₫</p>
                <img src="@(Model.ImageUrl ?? "https://via.placeholder.com/400")" alt="@Model.Name" class="w-full h-auto object-cover rounded-lg shadow-lg">
                <form asp-action="AddToCompare" asp-controller="Laptop" method="post">
                    <input type="hidden" name="laptopId" value="@Model.Id" />
                    <button type="submit" class="bg-primary text-white px-4 py-2 rounded-button hover:bg-blue-600 transition-colors">Thêm vào so sánh</button>
                </form>
            </div>
        </div>
    </div>
</section>