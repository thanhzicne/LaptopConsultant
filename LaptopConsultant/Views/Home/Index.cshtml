@model IEnumerable<LaptopConsultant.Models.Laptop>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="relative bg-gradient-to-r from-blue-50 to-blue-100 overflow-hidden">
    <div class="container mx-auto px-4 py-16 flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 mb-10 md:mb-0 z-10">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Tìm laptop phù hợp với bạn</h1>
            <p class="text-lg text-gray-700 mb-8">Hệ thống tư vấn thông minh giúp bạn tìm chiếc laptop hoàn hảo dựa trên nhu cầu và ngân sách của bạn.</p>
            <div class="flex space-x-4">
                <a href="@Url.Action("Index", "Laptop")" class="bg-primary text-white px-6 py-3 rounded-button hover:bg-blue-600 transition-colors whitespace-nowrap">
                    Tư vấn ngay
                </a>
                <a href="@Url.Action("Compare", "Laptop")" class="bg-white text-primary px-6 py-3 rounded-button border border-primary hover:bg-blue-50 transition-colors whitespace-nowrap">
                    So sánh laptop
                </a>
            </div>
        </div>
        <div class="md:w-1/2 relative z-0">
            <img src="https://readdy.ai/api/search-image?query=modern%20laptop%20floating%20with%20colorful%20light%20effects%2C%20minimalist%20clean%20background%2C%20product%20photography%2C%20high-end%20professional%20photo%2C%20soft%20lighting%2C%20tech%20advertisement%20style%2C%20white%20and%20blue%20color%20scheme%2C%20clean%20design&width=600&height=400&seq=1&orientation=landscape" alt="Laptop tư vấn" class="w-full h-auto object-cover rounded-lg shadow-lg">
        </div>
    </div>
</section>

<!-- Featured Laptops Section -->
<section class="container mx-auto px-4 py-12">
    <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Laptop nổi bật</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Khám phá những mẫu laptop được yêu thích nhất hiện nay.</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var laptop in Model)
        {
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
                <div class="relative">
                    <img src="@laptop.ImageUrl" alt="@laptop.Name" class="w-full h-48 object-cover object-top">
                    <div class="absolute top-2 right-2 bg-primary text-white text-xs font-medium px-2 py-1 rounded">Nổi bật</div>
                </div>
                <div class="p-4">
                    <h4 class="text-lg font-semibold text-gray-900 mb-2">@laptop.Name</h4>
                    <div class="flex items-center mb-2">
                        <div class="w-4 h-4 flex items-center justify-center text-primary mr-1">
                            <i class="ri-cpu-line"></i>
                        </div>
                        <span class="text-sm text-gray-600">@laptop.CPU</span>
                    </div>
                    <div class="flex items-center mb-2">
                        <div class="w-4 h-4 flex items-center justify-center text-primary mr-1">
                            <i class="ri-hard-drive-line"></i>
                        </div>
                        <span class="text-sm text-gray-600">@laptop.RAM, @laptop.Storage</span>
                    </div>
                    <div class="flex items-center mb-4">
                        <div class="w-4 h-4 flex items-center justify-center text-primary mr-1">
                            <i class="ri-computer-line"></i>
                        </div>
                        <span class="text-sm text-gray-600">@laptop.Screen</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-lg font-bold text-primary">@laptop.Price.ToString("N0") ₫</span>
                        <div class="flex space-x-2">
                            <form asp-action="AddToCompare" asp-controller="Laptop" method="post">
                                <input type="hidden" name="laptopId" value="@laptop.Id" />
                                <button type="submit" class="bg-white text-primary p-2 rounded-full border border-primary hover:bg-blue-50 transition-colors">
                                    <div class="w-5 h-5 flex items-center justify-center">
                                        <i class="ri-compare-line"></i>
                                    </div>
                                </button>
                            </form>
                            <a href="@Url.Action("Details", "Laptop", new { id = laptop.Id })" class="bg-primary text-white px-3 py-2 rounded-button hover:bg-blue-600 transition-colors whitespace-nowrap">Chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>