@model LaptopConsultant.ViewModels.StatisticsViewModel
@{
    ViewData["Title"] = "Thống kê xu hướng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Thống kê xu hướng</h2>
    <div class="container mx-auto px-4">
        <h3 class="text-xl font-semibold mb-4">Top 5 nhu cầu phổ biến</h3>
        <div id="needsChart" class="echarts-container h-96"></div>
        <h3 class="text-xl font-semibold mb-4 mt-8">Top 5 laptop được chọn</h3>
        <div id="laptopsChart" class="echarts-container h-96"></div>
        <h3 class="text-xl font-semibold mb-4 mt-8">Top 5 thương hiệu</h3>
        <div id="brandsChart" class="echarts-container h-96"></div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/echarts@5.4.3/dist/echarts.min.js"></script>
    <script src="~/js/charts.js" asp-append-version="true"></script>
}